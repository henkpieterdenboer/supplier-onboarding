# ===========================================
# Supplier Onboarding - Environment Variables
# ===========================================

# Demo mode (true = toont demo credentials, role switcher, etc.)
NEXT_PUBLIC_DEMO_MODE="false"

# Database (Neon PostgreSQL)
# Get these from your Neon dashboard
DATABASE_URL="postgresql://user:password@host-pooler/database?sslmode=require"
DIRECT_URL="postgresql://user:password@host/database?sslmode=require"

# NextAuth configuration
NEXTAUTH_SECRET="generate-a-random-secret-at-least-32-characters"
NEXTAUTH_URL="https://your-app.vercel.app"

# Email configuration
SMTP_HOST="smtp.ethereal.email"
SMTP_PORT="587"
SMTP_USER="your-smtp-user"
SMTP_PASS="your-smtp-password"

# Demo mode: all emails redirect to this address
# Leave empty in production to send to actual recipients
DEMO_EMAIL=""

# App URL for links in emails (activation, password reset, invitations)
APP_URL="https://your-app.vercel.app"

# Vercel Blob Storage (automatically set by Vercel when you add Blob storage)
BLOB_READ_WRITE_TOKEN="vercel_blob_..."
