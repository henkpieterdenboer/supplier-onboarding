# ===========================================
# Supplier Onboarding - Environment Variables
# ===========================================

# Demo mode (true = toont demo credentials, role switcher, etc.)
NEXT_PUBLIC_DEMO_MODE="false"

# Database (Neon PostgreSQL)
# Get these from your Neon dashboard
DATABASE_URL="postgresql://user:password@host-pooler/database?sslmode=require"
DIRECT_URL="postgresql://user:password@host/database?sslmode=require"

# NextAuth configuration
NEXTAUTH_SECRET="generate-a-random-secret-at-least-32-characters"
NEXTAUTH_URL="https://your-app.vercel.app"

# Email configuration
SMTP_HOST="smtp.ethereal.email"
SMTP_PORT="587"
SMTP_USER="your-smtp-user"
SMTP_PASS="your-smtp-password"

# Demo mode: all emails redirect to this address
# Leave empty in production to send to actual recipients
DEMO_EMAIL=""

# Resend (https://resend.com) â€” used for real email delivery
# In demo mode: optional, enables the Ethereal/Resend toggle in the nav
# In production: set SMTP_* vars to Resend SMTP (smtp.resend.com:465, user=resend, pass=API key)
RESEND_API_KEY=""

# From address for emails sent via Resend (must be a verified domain)
EMAIL_FROM='"Supplier Onboarding" <noreply@coloriginz.com>'

# App URL for links in emails (activation, password reset, invitations)
APP_URL="https://your-app.vercel.app"

# Microsoft Entra ID (Azure AD) SSO
NEXT_PUBLIC_AZURE_AD_ENABLED="false"
AZURE_AD_CLIENT_ID=""
AZURE_AD_CLIENT_SECRET=""
AZURE_AD_TENANT_ID=""

# Vercel Blob Storage (automatically set by Vercel when you add Blob storage)
BLOB_READ_WRITE_TOKEN="vercel_blob_..."
